{
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": false,
        "loose": true,
        "targets": {
          "browsers": "> 1%, IE 11, not op_mini all, not dead",
          "node": 8
        }
      }
    ]
  ],
  "plugins": [
    "@babel/plugin-syntax-dynamic-import",
    // "@babel/plugin-external-helpers",
    ["@babel/plugin-proposal-class-properties", { "loose" : true }]
  ],
  "ignore": [
    "node_modules/**"
  ]
}
